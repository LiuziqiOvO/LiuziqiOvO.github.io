FROM alpine:latest

# 安装Node.js和npm
RUN apk add --no-cache nodejs npm git wget

# 设置npm国内镜像源
RUN npm config set registry https://registry.npmmirror.com/

# 设置工作目录
WORKDIR /app

# 复制package.json和package-lock.json
COPY package*.json ./

# 安装依赖
RUN npm install

# 复制所有文件
COPY . .

# 生成静态文件
RUN npm run build

# 暴露端口
EXPOSE 4000

# 启动Hexo服务器
CMD ["npm", "run", "server"] 